{% extends 'base.html.twig' %}

{% block body %}
<select onchange="window.location.href=this.value;">
    <option value="" disabled selected>Pointer</option>
    <option value="{{ path('app_clocking_create') }}">Pointer un collaborateur</option>
    <option value="{{ path('app_clocking_create_multi') }}">pointer plusieurs collaborateurs</option>
</select>
<table class="table">
    <thead>
        <tr>
            <td scope="col">{{ 'entity.Clocking.date'|trans }}</td>
            <td scope="col">{{ 'entity.Clocking.duration'|trans }}</td>
            <td scope="col">{{ 'entity.Clocking.clockingProject'|trans }}</td>
            <td scope="col">{{ 'entity.Clocking.clockingUser'|trans }}</td>
            <td scope="col">Actions</td>
        </tr>
    </thead>
    <tbody>
        {% for clocking in clockings %}
        <tr>

            <td>{{ clocking.date|date }}</td>
            <td>{{ clocking.duration }}</td>
            <td>{{ clocking.clockingProject.name }}</td>
            <td>{{ clocking.clockingUser.lastName }} {{ clocking.clockingUser.firstName }}</td>
            <td>
                <a href="{{ path('app_Clocking_delete', {id: clocking.id}) }}">Supprimer</a>

            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}